{
  "name"                     : "lancia",
  "cwd"                      : "./bin",
  "script"                   : "app.js",
  "node_args"                : "--harmony",
  "log_date_format"          : "YYYY-MM-DD HH:mm Z",
  "instances"                : 2,
  "min_uptime"               : "200s",
  "max_restarts"             : 1,
  "max_memory_restart"       : "150M",
  "cron_restart"             : "1 0 * * *",
  "watch"                    : ["bin", "src"],
  "ignore_watch"             : ["[\\/\\\\]\\./", "node_modules"],
  "merge_logs"               : true,
  "exec_interpreter"         : "node",
  "exec_mode"                : "cluster",
  "autorestart"              : true,
  "env"                      : {"NODE_ENV": "prod"}
}